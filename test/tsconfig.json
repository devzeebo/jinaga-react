{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowJs": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "outDir": "../dist/types",
        "baseUrl": ".",
        "lib": [ "dom", "es2015" ],
        "paths": {
            "*": [
                "../node_modules/*",
                "../types/*"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ]
}