{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowJs": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist/types",
        "baseUrl": ".",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015"
        ],
        "paths": {
            "*": [
                "./node_modules/*",
                "./types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}